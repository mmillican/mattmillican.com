---
import { getPostSlugFromFilename } from '../utils';

const { post } = Astro.props;
const slug = post.frontmatter.slug || getPostSlugFromFilename(post.file);

const { title, subTitle, publishDate } = post.frontmatter;

// export interface Props {
// 	title: string;
// 	description: string;
// 	publishDate: string;
// 	url: string;
// }

// const { title, description, publishDate, url } = Astro.props as Props;
---

<article class="post-preview">
	<header>
		<time>{publishDate}</time>
		<a href={`/posts/${slug}`}><h1 class="title">{title}</h1></a>
	</header>
	<p>{subTitle}</p>
	<a href={`/posts/${slug}`}>Read more</a>
</article>

<style>
	.post-preview {
		padding-bottom: 2rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	.title,
	time {
		margin: 0;
	}

	time {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--theme-text);
	}
</style>

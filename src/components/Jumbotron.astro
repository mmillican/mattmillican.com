---
export interface Props {
  title?: string;
  subTitle?: string;
}

const { title, subTitle } = Astro.props;
---

<div class="flex flex-col mx-auto w-full lg:max-w-4xl xl:max-w-6xl px-4 sm:px-6 mt-20 mb-10 sm:mt-36 sm:mb-20 text-white">
  <h1 class="font-medium text-5xl md:text-6xl">
    { title ? title :
      <>
        Hi, I'm <span class="text-primary">Matt</span>
      </>
    }
  </h1>
  {
    subTitle &&
    <h2 class="mt-6 font-medium text-2xl text-gray-400">
      { subTitle }
    </h2>

  }
</div>

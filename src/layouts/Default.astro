---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.jsx";
import Jumbotron from '../components/Jumbotron.astro';
import Footer from '../components/Footer.astro';
// import BlogPostPreview from "../components/BlogPostPreview.astro";

export interface Props {
  title: string;
  subTitle?: string;
  description: string;
  permalink: string;
	tags?: string[];
  canonicalUrl?: string;
};

const { title, subTitle, description, permalink } = Astro.props;

---

<html lang="en" class="h-full scroll-smooth bg-gray-dark antialiased">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="flex h-full flex-col bg-gray-dark">
		<Header client:visible />
    <Jumbotron title={title} subTitle={subTitle} />

    <main class="prose prose-invert max-w-none mx-auto w-full lg:max-w-4xl xl:max-w-6xl px-4 sm:px-6">
      <slot />
    </main>

    <Footer />
	</body>
</html>
